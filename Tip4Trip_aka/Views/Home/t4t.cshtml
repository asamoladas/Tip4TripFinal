@{

    ViewBag.Title = "T4T";

}

<div class="pl-lg-5 pr-lg-5 pt-lg-4">
    @if (User.IsInRole("Owner") || User.IsInRole("Admin"))
    {

        <span>
            <button class="btn btn-default my-2 my-sm-0 m-1" type="button">
                <i class="fa fa-home"></i><a href="@Url.Action("MyTrip", "Home")"> My Houses</a>
            </button>
        </span>
    }
    @if (User.IsInRole("Renter"))
    {

        <span>
            <button class="btn btn-default my-2 my-sm-0 m-1" type="button">
                <i class="fa fa-drivers-license"></i><a href="@Url.Action("Create", "Houses")"> Become a host!</a>
            </button>
        </span>
    }
    <span style="color:white !important;">
        <button class="btn btn-default my-2 my-sm-0 m-1" type="button">
            <i class="fa fa-book"></i><a href="@Url.Action("MyReservations", "Home")"> My Reservations</a>
        </button>
    </span>
</div>